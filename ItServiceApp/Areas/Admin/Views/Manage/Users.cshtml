                                        if (method === "update") {
                                            var dataStr = ajaxOptions.data.values;
                                            var data = JSON.parse(dataStr);
                                            data.stateId = data.state.id;
                                            delete data["state"];
                                            dataStr = JSON.stringify(data);
                                            ajaxOptions.data.values = dataStr;
                                        }
                                        console.log(ajaxOptions);
                                    }
                                }),
                            }).appendTo(container);
                    },
                },
            }).dxDataGrid("instance");

